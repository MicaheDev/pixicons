{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020", "DOM"],
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "declaration": true, // Esto habilita la generación de archivos .d.ts
    "outDir": "./dist", // Directorio donde se generarán los archivos
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src", "lib"] // Asegúrate de incluir todos los archivos en src
}
